{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "indent": ["error", 4],
        "import/prefer-default-export": "off",
        "import/extensions": [
            "error",
            {
                "js": "never",
                "ts": "never",
                "json": "ignorePackages"

            }
        ],
        "class-methods-use-this": "off",
        "no-unused-vars": "off",
        "consistent-return": "off",
        "no-underscore-dangle": "off",
        "max-len": ["error", { "code": 110 }],
        "prefer-template": "off"
    },
    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [".js", ".ts"]
            }
        },
        "import/ignore": [
            ".json"
        ]
    }
}
